{
  "name": "react-infinite-logo-slider",
  "version": "2.0.0",
  "description": "A slider of logos or react components that scroll horizontally infinitely",
  "main": "build/index.js",
  "module": "build/index.js",
  "types": "build/index.d.ts",
  "exports": {
    ".": {
      "types": "./build/index.d.ts",
      "import": "./build/index.js",
      "require": "./build/index.js"
    }
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsc",
    "dev:examples": "vite --config examples/vite.config.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "type": "module",
  "author": "kreu",
  "license": "ISC",
  "keywords": [
    "react",
    "slider",
    "carousel",
    "infinite",
    "logo",
    "logo slider",
    "infinite carousel",
    "react infinite carousel",
    "tag slider",
    "tag",
    "tags slider",
    "marquee"
  ],
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "jsdom": "^25.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.3.1",
    "typescript": "^5.6.3",
    "vite": "^6.0.6",
    "vitest": "^2.1.8"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kreudev/react-infinite-logo-slider"
  },
  "bugs": {
    "url": "https://github.com/kreudev/react-infinite-logo-slider/issues"
  },
  "homepage": "https://github.com/kreudev/react-infinite-logo-slider#readme",
  "files": [
    "build",
    "README.md"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
